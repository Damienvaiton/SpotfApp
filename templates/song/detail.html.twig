{% extends 'base.html.twig' %}

{% block title %}Hello SongController!{% endblock %}


{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 0.5em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; align-items: center ; justify-content: center; display: flex; flex-direction: column; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .box { display: flex; flex-direction: column; align-items: center; justify-content: center; border: black 1px solid; padding: 10px; margin: 10px; }
        .row { display: flex; flex-direction: row; align-items: center; justify-content: center; }

    </style>

    <div class="example-wrapper" >

        <h1>Track detail</h1>

        <div class="card mb-4" style="max-width: 600px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ track.pictureLink}}" class="card-img" alt="{{ track.album.name }}" style="width: 100%; height: auto; object-fit: cover;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Nom : {{ track.name }}</h5>
                        <div class="mb-3">
                            <strong>Liste des artistes :</strong>
                            <ul class="list-inline">
                                {% for artist in track.artists %}
                                    <li class="list-inline-item badge badge-primary">{{ artist.name }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <p class="card-text">Nom album : <strong>{{ track.album.name }}</strong></p>
                        <p class="card-text">Dur√©e : {{ (track.duration_ms // 60000) }} min {{ (track.duration_ms % 60000) // 1000 }} sec</p>
                    </div>
                </div>
            </div>
        </div>

            <h1>Recommandation</h1>
            <div class="container">
                <div class="row">
                    {% for recommendation in recommendations.tracks %}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <img src="{{ recommendation.album.images[0].url }}" class="card-img-top" alt="{{ recommendation.album.name }}" style="height: 300px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">{{ recommendation.name }}</h5>
                                    <p class="card-text">Artist: {{ recommendation.artists[0].name }}</p>
                                    <p class="card-text">Album: {{ recommendation.album.name }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


        </div>




{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello SongController!{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1b1b1b;
            color: #f5f5f5;
            font-family: 'Montserrat', sans-serif;
        }

        h1 {
            color: #ff4757; /* Titre rouge vif */
            font-size: 3em;
            text-transform: uppercase;
            letter-spacing: 2px;
            animation: neon 1.5s ease-in-out infinite alternate;
            text-shadow: 0 0 10px #ff4757, 0 0 20px #ff6b81, 0 0 30px #ff6b81;
        }

        @keyframes neon {
            from {
                text-shadow: 0 0 10px #ff4757, 0 0 20px #ff6b81, 0 0 30px #ff6b81;
            }
            to {
                text-shadow: 0 0 20px #ff4757, 0 0 30px #ff6b81, 0 0 40px #ff6b81;
            }
        }

        .card {
            background: linear-gradient(135deg, #576574, #ff6b81);
            border: none;
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .card:hover {
            transform: translateY(-10px) rotate(-3deg);
            box-shadow: 0 15px 40px rgba(255, 107, 129, 0.7);
        }

        .card-img-top {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            transition: filter 0.3s ease;
        }

        .card:hover .card-img-top {
            filter: grayscale(50%) brightness(120%);
        }

        .card-title {
            color: #ff6b81;
            font-size: 1.5em;
            text-transform: uppercase;
            font-weight: bold;
        }

        .card-text {
            font-size: 1em;
            color: #f5f5f5;
            letter-spacing: 1px;
        }

        .example-wrapper {
            margin-top: 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .row {
            display: flex;
            justify-content: center;
        }

        .container {
            margin-top: 50px;
        }

        .btn-primary {
            background-color: #ff4757;
            border-color: #ff6b81;
            font-size: 1.2em;
            padding: 10px 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
            border-radius: 30px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #ff6b81;
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
{% endblock %}

{% block body %}
    <div class="example-wrapper">

        <div class="container">
            <h1 class="my-4 text-center">Playlist</h1>

            <div class="row">
                {% for track in playlist.items %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            {% if track.track.album.images[0] is defined  %}
                                <img src="{{ track.track.album.images[0].url }}" class="card-img-top" alt="{{ track.track.album.name }}" style="height: 200px; object-fit: cover;">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ track.track.name }}</h5>
                                <p class="card-text">Artist: {{ track.track.artists[0].name }}</p>
                                <p class="card-text">Album: {{ track.track.album.name }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
